{
  "variables": {
    "wifi_name": "lothlorien",
    "wifi_password": "fuck yeah",
    "home": "{{env `HOME`}}"
  },
  "builders": [
    {
      "name": "hocho",
      "type": "arm-image",
      "iso_url": "https://downloads.raspberrypi.org/raspbian_lite/images/raspbian_lite-2020-02-14/2020-02-13-raspbian-buster-lite.zip",
      "iso_checksum_type": "sha256",
      "iso_checksum": "12ae6e17bf95b6ba83beca61e7394e7411b45eba7e6a520f434b0748ea7370e8",
      "last_partition_extra_size": 3221225472
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["touch /boot/ssh"]
    },
    {
      "type": "shell",
      "inline": [
        "wpa_passphrase \"{{user `wifi_name`}}\" \"{{user `wifi_password`}}\" | sed -e 's/#.*$//' -e '/^$/d' >> /etc/wpa_supplicant/wpa_supplicant.conf"
      ]
    },
    {
			"type": "shell",
			"inline": [
				"systemctl set-default multi-user.target",
				"ln -fs /lib/systemd/system/getty@.service /etc/systemd/system/getty.target.wants/getty@tty1.service",
				"cat > /etc/systemd/system/getty@tty1.service.d/autologin.conf << EOF"
			]
},
			{
				"type": "file",
				"source": "data/boot/config.txt",
				"destination": "/boot/config.txt"
			},
			{
				"type": "file",
				"source": "data/etc/network/interfaces.d/wlan0-cfg",
				"destination": "/etc/network/interfaces.d/wlan0-cfg"
			},
			{
				"type": "shell",
				"inline": [
					"sed '/PasswordAuthentication/d' -i /etc/ssh/sshd_config",
					"echo  >> /etc/ssh/sshd_config",
					"echo 'PasswordAuthentication no' >> /etc/ssh/sshd_config"
			]
			}
	]
		}
